@model DoinGood.Models.Deed

@{
    ViewData["Title"] = "ChallengeCreate";
}

<h1>ChallengeCreate</h1>

<h2>BENEFICENCE - <em>be·​nef·​i·​cence</em></h2>
<h6><i>is defined as an act of charity, mercy, and kindness with a strong connotation of doing good to others</i></h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChallengeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatalystId" />
            <input type="hidden" asp-for="Catalyst" />
            <input type="hidden" asp-for="Fund" />
            <div class="form-group">
                <label asp-for="Beneficence" class="control-label">ACT THAT MADE <em>YOU</em> FEEL GOOD?</label>
                <input asp-for="Beneficence" class="form-control" placeholder="Today I..." />
                <span asp-validation-for="Beneficence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impact" class="control-label">HOW HAS YOUR ACTION IMPACTED SOMEONE ELSE?</label>
                <input asp-for="Impact" class="form-control" placeholder="IMPACT" />
                <span asp-validation-for="Impact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FundId">SELECT A CAUSE TO SUPPORT</label>
                <select asp-for="FundId" class="form-control" asp-items="ViewBag.fundList"></select>
                <span asp-validation-for="FundId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonateAmount" class="control-label">DONATION AMOUNT<sup>*per challenge accepted</sup></label>
                <input asp-for="DonateAmount" class="form-control" />
                <span asp-validation-for="DonateAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAmount" class="control-label">DONATION MAX<sup>*up to</sup></label>
                <input asp-for="MaxAmount" class="form-control" />
                <span asp-validation-for="MaxAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DeedIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}